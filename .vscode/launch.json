{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Debug Freqtuner",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/root/go/src/github.com/Climatik-Project/Climatik-Project/freqtuner",
            "port": 2345,
            "host": "fmaas2",
            "showLog": true,
            "trace": "verbose",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/root/go/src/github.com/Climatik-Project/Climatik-Project/freqtuner"
                }
            ],
            "env": {
                "NODE_NAME": "kind-control-plane",
                "KUBECONFIG": "/root/.kube/config"  // Add this if needed
            },
            "stopOnEntry": true,
            "apiVersion": 2,
            "debugAdapter": "dlv-dap"
        },
        {
            "name": "Debug Powercapping Controller",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "fmaas2",
            "port": 2345,
            "remoteRoot": "/root/go/src/github.com/Climatik-Project/Climatik-Project/powercapping-controller",
            "showLog": true
        },
        {
            "name": "Debug FreqTuning Recommender",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "fmaas2",
            "port": 2345,
            "env": {
                "NAMESPACE": "climatik-project",
                "KUBECONFIG": "/root/.kube/config"
            },
            "remoteRoot": "/root/go/src/github.com/Climatik-Project/Climatik-Project/freqtuning-recommender",
            "showLog": true
        }
    ]
}
